@model ZergTracker.Models.ApplicationUser
@{
    Layout = null;
}
    <!-- Sidebar user panel (optional) -->

    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
            <img src="@Model.ProfilePic" class="img-circle elevation-2" alt="User Image">
        </div>
        <div class="info">
            <a href="@Url.Action("Index", "Manage")" class="d-block">@Model.FirstName @Model.LastName</a>
        </div>
    </div>

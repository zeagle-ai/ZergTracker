@model ZergTracker.Models.Project

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">Zerg Tracker</li>
                    <li class="breadcrumb-item">Projects</li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="content-wrapper">
    <div class="custom-container padded-top">
        <div class="card">
            <div class="card-header">
                <div class="card-title">
                    Create Project
                </div>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="control-label col-md-2">
                            Project Title
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "EPIC Project Title!" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="control-label col-md-2">
                            Project Description
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Decription, new { htmlAttributes = new { @class = "form-control", placeholder = "A really AWESOME Project Description goes here!!!" } })
                            @Html.ValidationMessageFor(model => model.Decription, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <input type="submit" value="Create" class="btn btn-primary float-right" />
                </div>
            }
        </div>
        <div>
            @Html.ActionLink("Back", "Index")
        </div>
    </div>
</div>

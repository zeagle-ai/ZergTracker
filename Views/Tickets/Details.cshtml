@model ZergTracker.Models.ViewModels.TicketViewModel

@{
    ViewBag.Title = "Details";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Zerg Tracker</a></li>
                    <li class="breadcrumb-item">Issues</li>
                    <li class="breadcrumb-item active">Issue Details</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper padded-top">
    <div class="custom-container">
        <div class="card">
            <!-- Main Ticket Area -->
            <div class="card-header">
                <div class="user-block">
                    <img class="img-circle" src="~/favicon-32x32.png" alt="Zerg Logo">
                    <span class="username">Project: @Model.ProjectName</span>
                    <span class="description">Issue Creation: @Model.Created.ToString("MMM dd yyyy")</span>
                </div>
                <div class="card-tools">
                    
                    @if (Model.TicketStatus.Name == "New")
                    {
                        <span style="margin-right: 15px; font-size: 24px;" class="badge badge-pill badge-primary">@Model.TicketStatus.Name</span>
                    }
                    else if (Model.TicketStatus.Name == "In Development")
                    {
                        <span style="margin-right: 15px; font-size: 24px;" class="badge badge-pill badge-warning">@Model.TicketStatus.Name</span>
                    }
                    else if (Model.TicketStatus.Name == "Resolved")
                    {
                        <span style="margin-right: 15px; font-size: 24px;" class="badge badge-pill badge-secondary">@Model.TicketStatus.Name</span>
                    }


                    @if (Model.TicketPriority.Name == "Urgent")
                    {
                        <span style="margin-right: 15px; font-size: 24px;" class="badge badge-pill badge-danger">@Model.TicketPriority.Name</span>
                    }
                    else if (Model.TicketPriority.Name == "High")
                    {
                        <span style="margin-right: 15px; font-size: 24px;" class="badge badge-pill badge-warning">@Model.TicketPriority.Name</span>
                    }
                    else if (Model.TicketPriority.Name == "Medium")
                    {
                        <span style="margin-right: 15px; font-size: 24px;" class="badge badge-pill badge-warning">@Model.TicketPriority.Name</span>
                    }
                    else if (Model.TicketPriority.Name == "Low")
                    {
                        <span style="margin-right: 15px; font-size: 24px;" class="badge badge-pill badge-success">@Model.TicketPriority.Name</span>
                    }
                    
                </div>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Issue Title</dt>
                    <dd class="col-sm-8">@Model.Title</dd>
                    <dt class="col-sm-4">Issue Description</dt>
                    <dd class="col-sm-8">@Model.Description</dd>
                    <dt class="col-sm-4">Owner</dt>
                    <dd class="col-sm-8">@Model.OwnerUser.FirstName @Model.OwnerUser.LastName</dd>
                    <dt class="col-sm-4">Assigned Dev:</dt>
                    <dd class="col-sm-8">@Model.AssignedToUser.FirstName @Model.AssignedToUser.LastName</dd>
                </dl>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <span class="text-muted float-right">Last Updated: @Model.Updated.ToString("MM/dd/yyyy h:mm tt")</span>
            </div>
        </div>
        
        <!-- Comments and Attachments -->
        @if (User.Identity.IsAuthenticated)
        {
            <div class="card card-widget" id="comments">
                <div class="card-header">
                    <div class="user-block">
                        <img class="img-circle" src="~/favicon-32x32.png" alt="Zerg Logo">
                        <span class="username">Comments For: @Model.Title</span>
                        <span class="description">Issue Creation: @Model.Created.ToString("MMM dd yyyy")</span>
                    </div>
                    <!-- /.user-block -->
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                    <!-- /.card-tools -->
                </div>
                <!-- /.card-header -->
                
                        @foreach (var comment in Model.TicketComments)
                        {
                    <div class="card-body">

                        @if (comment.HasPic)
                        {
                            foreach (var pic in Model.TicketAttachments)
                            {
                                if (comment.Id == pic.CommentId)
                                {
                                    <img class="img-fluid pad" src="@pic.FilePath" alt="Comment Attachment">

                                }
                            }
                        }
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer card-comments">
                        <div class="card-comment">
                            <!-- User image -->
                            <img class="img-circle img-sm" src="@comment.User.ProfilePic" alt="User Image">

                            <div class="comment-text">
                                <span class="username">
                                    @comment.User.FirstName @comment.User.LastName
                                    <span class="text-muted float-right">@comment.Created.ToString("MM/dd/yyyy h:mm tt")</span>
                                </span><!-- /.username -->
                                @comment.Comment
                            </div>
                            <!-- /.comment-text -->
                        </div>
                        <!-- /.card-comment -->
                    </div>
                    <!-- /.card-footer/comments -->
                    }
                    <div class="card-footer">
                        @using (Html.BeginForm("AddCommentAttachment", "TicketComments", new { TicketId = Model.Id }, FormMethod.Post, new { role = "form", enctype = "Multipart/form-data" }))
                        {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("TicketId", Model.Id)

                            <div class="row">
                                <div class="col-12">
                                    @Html.Action("CommentProfilePic", "Account")
                                    <div class="img-push">                               
                                        @Html.TextArea("Comment", new { @class = "form-control", placeholder = "Leave comment here...", rows = "2" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-9">
                                    <img class="img-fluid pad padded-top align-content-center" id="preview" style="max-height: 150px;" />
                                </div>
                                <div class="col-3">
                                    <input name="image" type="file" class="form-control" id="fileUpload" style="display: none;" onchange="loadFile(event)" />
                                    <div class="btn-group padded-top">
                                        <a class="btn btn-primary" onclick="clicker()"><i class="fas fa-image fa-2x" style="color: white; cursor: pointer;"></i></a>
                                        <input type="submit" value="Comment" class="btn btn-primary" /> 
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <!-- /.card-footer -->
                </div>
                <!-- /.card -->
    }
    else
    {
        <h3 class="text-center">Please Login or Register to View or Leave Comments!</h3>
    }

    </div>
</div>
